{
  "name": "lumi",
  "version": "1.0.0",
  "description": "",
  "email": "lumi",
  "main": "build/bundle.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "rimraf build && cross-env NODE_ENV=development webpack && electron ./build/bundle.js",
    "build": "rimraf build && ncp ../build build && cross-env NODE_ENV=production webpack && electron-builder",
    "dist": "npm run build && electron-builder --dir",
    "pack": "npm run build && electron-builder",
    "webpack": "webpack"
  },
  "build": {
    "appId": "com.example.lumi",
    "productName": "lumi",
    "directories": {
      "output": "dist"
    },
    "files": [
      "./build/**/*",
      "!node_modules/**/*"
    ],
    "linux": {
      "icon": "build/lumi_logo.png",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "icon": "build/lumi_logo.png",
      "target": "nsis"
    },
    "mac": {
      "icon": "build/lumi_logo.png",
      "target": "dmg"
    }
  },
  "author": "lumi <noreply@lumi.com>",
  "homepage": "https://lumi-project.github.io/",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^13.13.5",
    "@types/socket.io-client": "^1.4.32",
    "cross-env": "^7.0.2",
    "electron": "^9.4.0",
    "electron-builder": "^22.6.0",
    "ncp": "^2.0.0",
    "rimraf": "^3.0.2",
    "ts-loader": "^7.0.4",
    "ts-node": "^8.10.1",
    "typescript": "^3.8.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "fs-extra": "^9.0.0",
    "lumi-cli": "0.0.50",
    "path": "^0.12.7"
  }
}
